{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
    "exclude": [
    "node_modules",
    "build",
    "ecosystem.config.js"
  ],
  "include": [
      "src/**/*.ts",    // All TypeScript files
      "src/**/*.js",    // All JavaScript files (since you have allowJs: true)
      "src/**/*.json",
      "src/**/*.md"
  ]
}
